{% block javascript %}
    <script>
        /* Toggle between adding and removing the "responsive" class to topIndexnav when the user clicks on the icon */
        function showResponsiveGlobalNav() {
            var x = document.getElementById("myGolbalTopNav");
            if (x.className === "topGlobalnav") {
                x.className += " responsive";
            } else {
                x.className = "topGlobalnav";
            }
        }
    </script>

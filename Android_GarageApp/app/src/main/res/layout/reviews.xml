<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/garageNameTtl"
        tools:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Note des clients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            style="?android:attr/ratingBarStyleSmall"
            android:stepSize="0.1"
            android:id="@+id/reviewsRatingBar" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteNumberTxt"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="AVIS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center_horizontal"
        android:textSize="21sp"
        android:textColor="@android:color/holo_green_dark"
        android:shadowColor="@color/colorAccent" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/posReviewsLst"
        android:layout_weight="0.79" />

    <TextView
        android:text="Donner une note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:elevation="1dp"
        android:textSize="18sp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1"
        android:id="@+id/giveNoteRatingBar" />

    <TextView
        android:text="Laisser un avis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="5"
        android:hint="@string/editTextComment"
        android:id="@+id/postCommentEdtTxt" />


</LinearLayout>